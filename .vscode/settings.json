{
  "conventionalCommits.scopes": [
    "frontend",
    "backend",
    "docker",
    "game",
    "login",
    "2FA",
    "chat",
    "rank",
  ],
  "editor.formatOnSave": true,
  "eslint.codeActionsOnSave.rules": {
    "source.fixAll": true
  },
  "eslint.format.enable": true,
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  }
}