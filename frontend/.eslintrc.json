{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "next"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "react"
  ],
  "overrides": [
    {
      "files": [
        "src/**/*.ts",
        "src/**/*.tsx"
      ],
      "rules": {
        "react/no-unescaped-entities": "off",
        "@next/next/no-page-custom-font": "off",
        "indent": [
          "warn",
          2
        ],
        "quotes": [
          "warn",
          "single"
        ],
        "semi": [
          "warn",
          "always"
        ],
        "no-console": [
          "warn"
        ],
        "no-multiple-empty-lines": [
          "warn",
          {
            "max": 1,
            "maxEOF": 1
          }
        ],
        "comma-spacing": [
          "warn",
          {
            "before": false,
            "after": true
          }
        ],
      }
    }
  ]
}